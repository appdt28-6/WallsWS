
@(Html.Kendo().Grid<WallsWS.Models.TICKETS>()
      .Name("grid")
      .Columns(columns =>
      {
        columns.Bound(c => c.Ticket_Date);
        columns.Bound(c => c.Ticket_Subtotal);
        columns.Bound(c => c.Ticket_Factura);
        columns.Bound(c => c.Sucu_Id);
        columns.Bound(c => c.Ticket_Status);
        columns.Bound(c => c.Ticket_Pago);
        columns.Bound(c => c.Ticket_Turno);
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .Pageable()
      .Filterable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("TICKETS_Read", "Tickets"))
      )
)
